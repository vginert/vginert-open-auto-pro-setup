# Ensure root
if [ "$(id -u)" != "0" ]; then
   echo 'The instllation must be run by root. Use "sudo ./install" instead' 1>&2
   exit 1
fi

echo
echo "Installing pi-hutdown"
echo "---------------------"
cd pi-shutdown
./install
cd ..

echo
echo "Installing splash screen"
echo "---------------------"
cd splash-screen
./install
cd ..
